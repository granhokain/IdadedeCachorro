<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="idadedecachorro.studio.rafael.idadedecachorro.MainActivity" android:background="#00b9d5">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/cachorro"
            android:id="@+id/imageView2" tools:ignore="ContentDescription,UnknownId" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:contentDescription=""/>

    <TextView
            android:text="@string/Text_fixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/imageView2"
            android:layout_marginTop="27dp" android:id="@+id/textView" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:textColor="@android:color/background_light"
            android:padding="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/textView" android:layout_centerHorizontal="true" android:layout_marginTop="35dp"
            android:id="@+id/caixaTextoId" android:background="@android:color/background_light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/botaoIdadeId"
            android:layout_marginTop="37dp" android:id="@+id/resultadoIdadeId" android:layout_alignRight="@+id/caixaTextoId"
            android:layout_alignEnd="@+id/caixaTextoId" android:layout_alignLeft="@+id/caixaTextoId"
            android:layout_alignStart="@+id/caixaTextoId" android:textColor="@android:color/background_light"/>
    <Button
            android:text="@string/descobrir_idade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaoIdadeId"
            android:layout_below="@+id/caixaTextoId" android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>
</RelativeLayout>
